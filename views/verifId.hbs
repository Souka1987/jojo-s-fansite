<section>
    <div class="container mt-5">
        <div class="card-body mx-auto" style="max-width: 700px;">
            <h2 class="text-center">Vérification de l'email</h2>
            {{#if info }}
            <form action="/verifuser" method="POST">

                <div class="form-group justify-content-center mt-5">
                    <input type="hidden" class="form-control" name="email" value="{{ info.to }}" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary" onclick="alert('Cool ! Ton email a été vérifié')"> Valider mon email </button>
                </div>
            </form>
            {{/if }}
        </div>
    </div>
</section>