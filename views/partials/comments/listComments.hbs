{{!-- Partial liste des commentaires --}}

<div class="col-md-10 mt-5">
    {{!-- <h6 class="card-header smaller">Commentaires ajout√©s</h6> --}}
    {{#each comments  }}
    <ul class="list-group mt-2">
        <li class="list-group-item">
            {{!-- <div class="col-xs-2 col-md-1">
                            <img src="" class="img-circle img-responsive" alt="" /></div> --}}

            <h6>Par: {{author}}</h6>
            <p class="card-text text-muted"><small>le: {{ moment createDate format="DD.MM.YYYY" }}</small></p>
            <br>
            <p>{{ comment }}</p>
            <div class="action">
                {{!-- Suppression d'un commentaire --}}
                {{#ifCond ../session.userId authorId }}
                <form class="mt-2" action="/deleteComments/{{ _id }}" method="GET">
                    <button class="btn btn-delete" type="submit"><i class="fas fa-trash-alt"></i></button>
                </form>
                {{/ifCond}}
            </div>
        </li>
        {{/each }}
    </ul>
</div>