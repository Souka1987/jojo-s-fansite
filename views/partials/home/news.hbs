{{!-- /News --}}
<section>
    <div class="container">
        <div class="row">
            {{!-- Début de la boucle --}}
            {{#each (limit news 3) }}
            <div class="card col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-4" style="margin: 5px;">
                <img src="{{ image }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <a href="/admin/editNews/{{ article._id }}">
                        <h5 class="card-title">{{ title }}</h5>
                    </a>
                    <p class="card-text">{{ content }}</p>
                    {{!-- Récupérer le "createDate" pour ajouter la date --}}
                    <p class="card-text"><small class="text-muted">Ajouté le:
                            {{ moment createDate format="DD-MM-YYYY" }}</small></p>
                </div>
            </div>
            {{!-- Fin de la boucle --}}
            {{/each }}
        </div>
    </div>
</section>
{{!-- /News --}}