<section>
    <div class="container">
        <h6 class="text-center text-white">Ajouter une news</h6>
        {{!--Ajout de l'url et de la méthode + multipart/form-data pour ajouter des fichiers--}}
        <form action="/admin/news" method="POST" enctype="multipart/form-data">

            {{!-- Input Titre du manga --}}
            <div class="form-group">
                <label for="text">Titre</label>
                <input type="text" class="form-control" name="title">
            </div>

            {{!-- Input Contenu --}}
            <div class="form-group">
                <label>Description</label>
                <textarea class="ckeditor" id="editor" name="content"></textarea>
                {{!-- Rajout de l'éditeur de texte "CKeditor" --}}
                <script>
                    const ed = CKEDITOR.replace('editor', {
                        entities: false, // Pour la suppression des caractères spéciaux
                        //uiColor: '#FFF205' // Coloriser les bordures de l'éditeur
                    });

                    ed.on('change', function (e) {// Modification du contenu de l'éditeur
                        console.log(e.editor.getData())
                    })
                </script>
            </div>

            {{!-- Images --}}
            <div class="form-group">
                <label >Envoyer une image au format jpeg</label>
                <input type="file" class="form-control-file" name="image">
            </div>

            {{!-- Bouttons --}}
            <div class="text-center">
                <button type="submit" class="btn btn-ok"><i class="fas fa-check"></i></button>
            </div>
        </form>
    </div>
</section>