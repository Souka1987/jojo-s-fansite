<section>
    <div class="container">
        <h6 class="text-center text-white">Modifier une news</h6>
        {{!--Ajout de l'url et de la méthode--}}
        <form action="/admin/editNews/{{ _id }}" method="POST" enctype="multipart/form-data">

            {{!-- Input Titre du manga --}}
            <div class="form-group">
                <label for="text">Titre</label>
                <input type="text" class="form-control" name="title" value="{{ title }}">
            </div>

            {{!-- Input Contenu --}}
            <div class="form-group">
                <label>Description</label>

                <textarea class="ckeditor" id="editor{{ _id }}" name="content" hidden>{{ content }}</textarea>
                {{!-- Rajout de l'éditeur de texte "CKeditor" --}}
                <script>
                    const edNews{{_id}} = CKEDITOR.replace(`editor{{ _id }}`, {
                        entities: false, // Pour la suppression des caractères spéciaux
                       // uiColor: '#FFF205'  // Coloriser les bordures de l'éditeur
                    });

                    edNews{{_id}}.on('change', function (e) {// Modification du contenu de l'éditeur
                        console.log(e.editor.getData())
                    });
                </script>
            </div>

            {{!-- Images --}}
            <div class="form-group">
                <label >Envoyer une image au format jpeg</label>
                <input type="file" class="form-control-file" src="{{image}}"
                    name="image">{{ image }}
            </div>

            {{!-- Bouttons --}}
            <div class="text-center">
                <button type="submit" class="btn btn-edit"><i class="fas fa-edit"></i></button>
            </div>
        </form>
    </div>
</section>