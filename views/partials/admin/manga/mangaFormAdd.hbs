<section>
    <div class="container">
        <h6 class="text-center text-white">Ajouter un manga</h6>
        {{!--Ajout de l'url et de la méthode--}}
        <form action="/admin/manga" method="POST" enctype="multipart/form-data">

            {{!-- Input Titre du manga --}}
            <div class="form-group">
                <label for="text">Titre du tome</label>
                <input type="text" class="form-control" id="exampleInput" name="title">
            </div>

            {{!-- Input saison --}}
            <div class="form-group">
                <label for="text">Saison</label>
                <input type="number" class="form-control" id="exampleInput" name="season">
            </div>

            {{!-- Input Contenu --}}
            <div class="form-group">
                <label for="exampleInputTextarea">Description</label>
                <textarea class="ckeditor" id="editor14" name="content"></textarea>
                {{!-- Rajout de l'éditeur de texte "CKeditor" --}}
                <script>
                    const ed14 = CKEDITOR.replace('editor14', {
                        entities: false, // Pour la suppression des caractères spéciaux
                        language: 'fr',
                        uiColor: '#FFF205' // Coloriser les bordures de l'éditeur
                    });

                    ed14.on('change', function (e) {// Modification du contenu de l'éditeur
                        console.log(e.editor.getData())
                    })
                </script>
            </div>

            {{!-- Image --}}
            <div class="form-group">
                <label for="exampleFormControlFile1">Envoyer une image au format jpeg</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">
            </div> 

            {{!-- Bouttons --}}
            <div class="text-center">
                <button type="submit" class="btn btn-ok"><i class="fas fa-check"></i></button>
            </div>
        </form>
    </div>
</section>