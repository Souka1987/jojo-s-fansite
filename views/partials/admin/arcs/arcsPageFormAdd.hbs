<section>
    <h1 class="text-center">Arcs</h1>
    {{!--Ajout de l'url et la méthode --}}
    <form action="/admin/arcs" method="POST" enctype="multipart/form-data">

        {{!-- Input Nom du personnage --}}
        <div class="form-group">
            <label for="text">Titre</label>
            <input type="text" class="form-control" id="exampleInput" name="title">
        </div>

        {{!-- Input Contenu --}}
        <div class="form-group">
            <label for="exampleInputTextarea">Contenu</label>
            <textarea class="form-control" id="content{{ _id }}" placeholder="example textarea" name="content"></textarea>
            {{!-- Rajout de l'éditeur de texte "CKeditor" --}}
            <script>
                CKEDITOR.replace('content{{_id}}', {
                    entities: false
                })
            </script>
        </div>

        {{!-- Input Images --}}
        <div class="form-group">
            <label for="exampleFormControlFile1">Envoyer une image au format jpeg</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">
        </div>

        {{!-- Bouttons --}}
        <div>
            <button type="submit" class="btn btn-primary">Valider</button>
            <button type="submit" class="btn btn-secondary">Annuler</button>
        </div>
    </form>
</section>