<section>
    <div class="container">
        <h6 class="text-center text-white">Modifier une saison (page d'acceuil)</h6>
        {{!--Ajout de l'url et la méthode --}}
        <form action="/admin/editArcs/{{ _id }}" method="POST" enctype="multipart/form-data">

            {{!-- Input Titre --}}
            <div class="form-group">
                <label for="text">Titre du tome</label>
                <input type="text" class="form-control" id="exampleInput" name="title" value="{{ title }}">
            </div>

            {{!-- Input Contenu --}}
            <div class="form-group">
                <label for="exampleInputTextarea">Contenu</label>
                <textarea class="ckeditor" id="editor5" name="content" hidden>{{ content }}</textarea>
                {{!-- Rajout de l'éditeur de texte "CKeditor" --}}
                <script>
                    const ed5 = CKEDITOR.replace('editor5', {
                        entities: false, // Pour la suppression des caractères spéciaux
                        uiColor: '#FFF205' // Coloriser les bordures de l'éditeur
                    });

                    ed5.on('change', function (e) {// Modification du contenu de l'éditeur
                        console.log(e.editor.getData())
                    });

                    // Injecter les data
                    const data{{ _id }} = document.getElementById('ckeditor').innerText
                    CKEDITOR.instances.editor.setData(data{{ _id }})
                </script>
            </div>

            {{!-- Input Images --}}
            <div class="form-group">
                <label for="exampleFormControlFile1">Envoyer une image au format jpeg</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">{{ image }}
            </div>

            {{!-- Bouttons --}}
            <div class="text-center">
                <button type="submit" class="btn btn-edit"><i class="fas fa-edit"></i></button>
            </div>
        </form>
    </div>
</section>