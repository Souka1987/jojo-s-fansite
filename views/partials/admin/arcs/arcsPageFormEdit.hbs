<section>
    <div class="container">
        <h6 class="text-center text-white">Modifier une saison (page d'acceuil)</h6>
        {{!--Ajout de l'url et la méthode --}}
        <form action="/admin/editArcs/{{ _id }}" method="POST" enctype="multipart/form-data">

            {{!-- Input Titre --}}
            <div class="form-group">
                <label for="text">Titre du tome</label>
                <input type="text" class="form-control" name="title" value="{{ title }}">
            </div>

            {{!-- Input Contenu --}}
            <div class="form-group">
                <label>Contenu</label>
                <textarea class="ckeditor" id="editorArc{{_id}}" name="content" hidden>{{ content }}</textarea>
                {{!-- Rajout de l'éditeur de texte "CKeditor" --}}
                <script>
                    CKEDITOR.replace('content');
                </script>
            </div>

            {{!-- Input Images --}}
            <div class="form-group">
                <label>Envoyer une image au format jpeg</label>
                <input type="file" class="form-control-file" name="image">{{ image }}
            </div>

            {{!-- Bouttons --}}
            <div class="text-center">
                <button type="submit" class="btn btn-edit"><i class="fas fa-edit"></i></button>
            </div>
        </form>
    </div>
</section>