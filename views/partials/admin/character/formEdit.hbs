<section>
    <div class="container">
        <h6 class="text-center text-white">Modifier un personnage</h6>
        {{!--Ajout de l'url et de la méthode. "multipart/form-data" sert à prendre en compte le jpeg--}}
        <form action="/admin/editCharacters/{{ _id }}" method="POST" enctype="multipart/form-data">

            {{!-- Input Nom du personnage --}}
            <div class="form-group">
                <label for="text">Nom du personnage</label>
                <input type="text" class="form-control" id="exampleInput" name="name" value="{{ name }}">
            </div>

            {{!-- Input du Pouvoir --}}
            <select class="custom-select custom-select-sm" name="powers">
                <option>Selectionner un pouvoir</option>
                {{#each powers }}
                <option value="{{name}}">{{powers}}</option>
                {{/each }}
            </select>

            {{!-- Input Contenu --}}
            <div class="form-group mt-2">
                <label for="exampleInputTextarea">Introduction du personnage</label>
                <textarea class="ckeditor" id="editor7" name="content" hidden>{{ content }}</textarea>
                {{!-- Rajout de l'éditeur de texte "CKeditor" --}}
                <script>
                    const ed7 = CKEDITOR.replace('editor7', {
                        entities: false, //pour la suppression des caractères spéciaux
                        uiColor: '#FFF205' //Coloriser les bordures de l'éditeur
                    });

                    ed7.on('change', function (e) {//modification du contenu de l'éditeur
                        console.log(e.editor.getData())
                    })
                </script>
            </div>

            {{!-- Input Images --}}
            <div class="form-group">
                <label for="exampleFormControlFile1">Envoyer une image au format jpeg</label>
                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">{{ image }}
            </div>

            {{!-- Bouttons --}}
            <div class="text-center">
                <button type="submit" class="btn btn-edit"><i class="fas fa-edit"></i></button>
            </div>
        </form>
    </div>
</section>