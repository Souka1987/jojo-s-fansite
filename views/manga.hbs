{{!-- Le manga --}}
<section class="mt-5">
    <div class="container">
        <div class="row">

            {{!-- Contenu --}}
            <div class="">

                {{!-- Titre --}}
                <h1 style="text-align: center;">A propos du manga</h1>

                {{!-- Images --}}
                <div class="row" style="margin-top: 50px;">
                    <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                        <div class="bg-white rounded shadow-sm"><img
                                src="https://pbs.twimg.com/media/EfrBZQAXgAs-3s7.jpg" alt=""
                                class="img-fluid card-img-top">
                        </div>
                    </div>
                    {{!-- / Images --}}


                    {{!-- Info --}}
                    <div class="accordion" id="accordionExample">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h2 class="mb-0">
                                    <button class="btn btn-link btn-block title-accordion" type="button"
                                        data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
                                        aria-controls="collapseOne">
                                        Information
                                    </button>
                                </h2>
                            </div>

                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                                data-parent="#accordionExample">
                                <div class="card-body">
                                    ...
                                </div>
                            </div>
                            <div class="card mt-2">
                                <div class="card-header" id="headingTwo">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link btn-block title-accordion collapsed" type="button"
                                            data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false"
                                            aria-controls="collapseTwo">
                                            Information
                                        </button>
                                    </h2>
                                </div>
                                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo"
                                    data-parent="#accordionExample">
                                    <div class="card-body">
                                        ...
                                    </div>
                                </div>
                            </div>
                            <div class="card mt-2">
                                <div class="card-header" id="headingThree">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link btn-block title-accordion collapsed" type="button"
                                            data-toggle="collapse" data-target="#collapseThree" aria-expanded="false"
                                            aria-controls="collapseThree">
                                            Information
                                        </button>
                                    </h2>
                                </div>
                                <div id="collapseThree" class="collapse" aria-labelledby="headingThree"
                                    data-parent="#accordionExample">
                                    <div class="card-body">
                                        ...
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{!-- / Info --}}


                        {{!-- Tomes --}}
                        <div class="container mt-5">
                            <h1 style="text-align: center; mt-5">Liste des tomes</h1>

                            {{!-- Navbar Tabs --}}
                            <div class="mb-5">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#">Phantom Blood</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Battle Tendency</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Stardust Crusaders</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Diamond Is Unbreakable</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Golden Wind</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Stone Ocean</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Steel Ball Run</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Jojolion</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"></a>
                                    </li>
                                </ul>
                            </div>
                            {{!-- / Navbar Tabs --}}

                            {{!-- Liste des tomes --}}

                            <h2>...</h2>
                            <p>...</p>

                            <div class="container">
                                <div class="row">
                                    {{!-- Début de la boucle --}}
                                    {{#each (limit manga 4) }}
                                    <div class=" card col-lg-3 col-md-6 col-sm-12" style="width: 18rem;">
                                        <img src="{{ image }}" class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <a href="/admin/editManga/{{ _id }}">
                                                <h5 class="card-title">{{ title }}</h5>
                                            </a>
                                            <p class="card-text">{{ content }}</p>
                                            {{!-- Récupérer le "createDate" pour ajouter la date --}}
                                            <p class="card-text"><small class="text-muted">Ajouté le:
                                                    {{ moment createDate format="DD-MM-YYYY" }}</small></p>
                                        </div>
                                    </div>
                                    {{!-- Fin de la boucle --}}
                                    {{/each }}
                                </div>
                            </div>

                            {{!-- Section commentaires --}}
                            <h2 class="text-center mt-5">Commentaires</h2>
                            <div class="media mt-4">
                                <img class="d-flex mr-3 rounded-circle" src="" height="64" width="64" alt="">
                                <div class="media-body">
                                    <h5 class="mt-0">User Name</h5>
                                    <p class="small">...</p>
                                </div>
                            </div>
                            {{!-- Formulaire commentaire --}}
                            <div class="card my-4">
                                <h5 class="card-header">Laisser un commentaire:</h5>
                                <div class="card-body">
                                    <form>
                                        <div class="form-group">
                                            <textarea class="form-control" rows="3"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-com">Envoyer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
{{!-- / Manga --}}